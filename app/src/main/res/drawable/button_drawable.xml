<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Dark shadow (Bottom Right) -->
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0"/>  <!-- Dark shadow color -->
            <corners android:radius="100dp"/>
        </shape>
    </item>

    <!-- Light shadow (Top Left) -->
    <item android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- Light shadow for 3D effect -->
            <corners android:radius="100dp"/>
        </shape>
    </item>

    <!-- Main Button -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0"/>  <!-- Button Background -->
            <corners android:radius="100dp"/>  <!-- Rounded Corners -->
            <stroke android:width="4dp" android:color="@color/strokeColor"/>  <!-- Border -->
        </shape>
    </item>

</layer-list>
